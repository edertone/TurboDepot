{
    "$schema": "https://raw.githubusercontent.com/edertone/TurboBuilder/master/TurboBuilder-Node/src/main/resources/json-schema/turbobuilder.schema.json",
    "metadata": {
        "name": "turbodepot-php",
        "description": "TODO",
        "builderVersion": "1.0.0"
    },
    "validate": {
        "runBeforeBuild": true,
        "projectStructure": {
            "readmeFileMandatory": true,
            "extrasFolderMandatory": true,
            "extrasSubFoldersMandatory": [
                "help",
                "todo"
            ],
            "extrasTodoExtension": true
        },
        "filesContent": {
            "tabsForbidden": {
                "enabled": true,
                "affectedPaths": [
                    "src",
                    "extras"
                ],
                "excludes": [
                    ".svg",
                    ".properties"
                ]
            },
            "copyrightHeaders": [
                {
                    "path": "extras/copyright headers/TurboDepot-Php.txt",
                    "affectedPaths": ["src"],
                    "includes": ["php"],
                    "excludes": ["autoloader.php", "libs"]
                }
            ]
        },
        "styleSheets": {
            "onlyScss": true,
            "noCssHardcodedColors": true
        },
        "php": {
            "namespaces" : {
                "enabled": true,
                "mandatory": true,
                "mustContain": ["org\\turbodepot\\src\\$path"],
                "excludes": ["autoloader.php", "index.php", "libs"]
            }
        }
    },
    "build": {
        "printTodoFiles": false,
        "replaceVersion": {
            "enabled": false,
            "wildCard": "@@--build-version--@@",
            "extensions": [
                "js",
                "php",
                "json"
            ]
        },
        "lib_php": {
            "createPhar": true
        }
    },
    "release": {
        "printTodoFiles": true,
        "gitChangeLog": true,
        "gitChangeLogCount": 5,
        "optimizePictures": true,
        "generateCodeDocumentation": true
    },
    "test": [
        {
            "type": "phpUnit",
            "testsRoot": "src/test/php",
            "coverageReport": true,
            "coverageReportOpenAfterTests": true
        }
    ]
}